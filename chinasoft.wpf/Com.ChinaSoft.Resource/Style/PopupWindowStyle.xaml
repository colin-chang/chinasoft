<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--头部区：容器-->
    <Style TargetType="Border" x:Key="BaseHeadContainer">
        <Setter Property="Background" Value="#CDCED6" />
        <Setter Property="CornerRadius" Value="15,15,0,0"/>
        <Setter Property="Padding" Value="20,13"/>
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,-1" />
    </Style>

    <Style TargetType="TextBlock" x:Key="BaseHeadTitle">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <!--头部区：标题栏关闭按钮-->
    <Style TargetType="Button" x:Key="BaseHeadClose">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Image Source="/Com.ChinaSoft.Resource;Component/Images/close.png" Height="20" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--内容区：容器-->
    <Style TargetType="Border" x:Key="BaseContentContainer">
        <Setter Property="Background" Value="#EEEFF4" />
        <Setter Property="CornerRadius" Value="0,0,15,15"/>
        <Setter Property="Padding" Value="20,10,20,40"/>
    </Style>

</ResourceDictionary>